<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInventario.Views.MainView"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="MainView">
    <VerticalStackLayout>
       
        <toolkit:DockLayout>
            <Label toolkit:DockLayout.DockPosition="Top"></Label>
            <ListView>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <toolkit:DockLayout>
                            <StackLayout toolkit:DockLayout.DockPosition="Left" WidthRequest="100">
                                <Label>Descripcion</Label>
                                <Label>precio</Label>
                                
                            </StackLayout>
                            <Label toolkit:DockLayout.DockPosition="None">descripcion</Label>
                            
                        </toolkit:DockLayout>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </toolkit:DockLayout>
    </VerticalStackLayout>
</ContentPage>